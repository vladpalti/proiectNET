@page
@model proiect.Pages.Reviews.CreateReviewModel

@{
    ViewData["Title"] = "Create Review";
}

<h1>Create Review</h1>

<h4>Review</h4>
<hr />
<form method="post">
    <label asp-for="Review.MovieID">Movie</label>
    <select asp-for="Review.MovieID" asp-items="Model.MovieSelectList" class="form-control"></select>

    <input type="hidden" asp-for="Review.UserId" value="@Model.UserId" />

    <label asp-for="Review.Rating">Rating</label>
    <input asp-for="Review.Rating" class="form-control" />

    <label asp-for="Review.Comment">Comment</label>
    <textarea asp-for="Review.Comment" class="form-control"></textarea>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
